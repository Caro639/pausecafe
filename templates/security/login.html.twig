{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="container" id="form_login">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center" id="h1_login">Connexion</h1>
        {# </div>
    </div> #}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e) {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <h2 class="h3 mb-3 font-weight-normal">Me connecter</h2>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Remember me
        </label>
    </div>

    <button class="btn btn-lg btn-dark mt-3" type="submit">
        Me connecter
    </button>
   
    <a href="{{ path('app_register') }}" class="btn btn-lg btn-dark mt-3">M'inscrire</a>       
  
    <a href="{{ path('forgotten_password') }}" class="btn btn-light mt-3">Mot de passe oublié ?</a>
</form>
   </div>
</div>
</section>
{% endblock %}
