{% extends 'base.html.twig' %}

{% block title %}Réinitialiser son mot de passe
{% endblock %}

{% block body %}
	<section class="container" id="form_login">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<h2 class="text-center" id="h1_login">Réinitialiser son mot de passe</h2>

				{{ form_start(resetPasswordRequestForm)}}
				{{ form_row(resetPasswordRequestForm.email) }}
				<button class="btn btn-lg btn-dark mt-3" type="submit">
					Valider
				</button>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{{ form_end(resetPasswordRequestForm) }}

			</div>
		</div>
	</section>
{% endblock %}
